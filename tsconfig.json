      "./components/pagination/pagination.ts",
      "./components/table/table.ts",
      "./components/table/filtering.ts",
      "./components/table/sorting.ts",
      "./components/table/paging.ts",
      "./components/table/table-config.ts",
      "./components/index.ts"
    ]
}
